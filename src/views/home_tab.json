{
  "type": "home",
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Open Issues*\nThis is where you can find requests that are either Unclaimed or In-Progress across all channels"
      }
    },
    {
      "type": "divider"
    } {{#if issues}}{{#each issues }},
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*<{{ticket_url}}|{{key}}> - {{{summary}}}*"
      }
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Status*\n{{status}}"
        },
        {
          "type": "mrkdwn",
          "text": "*Reported by*\n{{#if reporter}}{{{reporter}}}{{else}}_Unknown_{{/if}}"
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "{{#if thread_url}}<{{thread_url}}|View thread>{{else}}_Conversation could not be found_{{/if}}"
        }
      ]
    },
    {
      "type": "divider"
    } {{/each}} {{else}},
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": ":nerd_face: *There are no open issues!*"
      }
    }
    {{/if}}
  ]
}
